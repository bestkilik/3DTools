scriptJob -event "SelectionChanged" "$total=`ls -tr`;$selList = `ls -sl`;for ($obj in $total){$inSel = 0;for ($s in $selList){if ($obj==$s){$inSel = 1;break;}}if (`attributeExists \"Selected\" $obj` == 1){if ($inSel == 1){setAttr ($obj + \".Selected\") 1;}else{setAttr ($obj + \".Selected\") 0;}}}" -pro;